<div class="container">
  <div class="row">
    <div class="col-md-8 offset-2">
      <h3 class="my-4 mt-5">商品一覧</h3>

      <%= link_to new_admin_item_path, style:"font-size: 35px;" do %>
        <i class="fas fa-plus-circle"></i>
      <% end %>

      <table class="table table-hover">
        <thead>
          <tr>
            <th>商品ID</th>
            <th>商品名</th>
            <th>税抜価格</th>
            <th>ジャンル</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @items.each do |item| %>
          <tr>
            <td><%= item.id %></td>
            <td>
              <%= link_to admin_item_path(item.id) do %>
              <%= item.name %>
              <% end %>
            </td>
            <td><%= number_to_currency(item.price, unit: "¥", format: "%u %n" ) %></td>
            <td><%= item.genre.name %></td>
            <th>
              <% if item.is_active == true %>
              <p class = "text-success">
                販売中
              </p>
              <% else %>
              <p class = "text-danger">
                販売停止中
              </p>
              <% end %>
            </th>
          </tr>
          <% end %>
        </tbody>
      </table>
        <%= paginate @items %>
    </div>
  </div>
</div>