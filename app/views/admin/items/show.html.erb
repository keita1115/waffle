<div class="container">
  <div class="row">
    <div class="col-md-8 offset-2">
      <h3 class="my-4 mt-5">商品詳細</h3>

      <div class="text-center">
        <!--商品画像-->
        <%= image_tag @item.get_item_image, size: "350x220" %>
      </div>


      <!--商品詳細-->
      <div class="text-center">
        <br>
        <table class="table">
          <tr>
            <th>商品名</th>
            <td><%= @item.name %></td>
          </tr>

          <tr>
            <th>商品説明</th>
            <td><%= @item.introduction %></td>
          </tr>

          <tr>
            <th>ジャンル</th>
            <td><%= @item.genre.name %></td>
          </tr>

          <tr>
            <th> 税込価格<br>(税抜価格)</th>
            <td><%= @item.with_tax_price.to_s(:delimited) %>(<%= @item.price.to_s(:delimited) %>)円</td>
          </tr>

          <tr>
            <th>販売ステータス</th>
            <th>
              <% if @item.is_active == true %>
              <p class = "text-success">
                販売中
              </p>
              <% else %>
              <p class = "text-danger">
                販売停止中
              </p>
              <% end %>
            </th>
          </tr>
        </table>
      </div>

       <div class="text-center">
        <table class="table">
          <!--編集ボタン-->
          <th><%= link_to "編集する", edit_admin_item_path(@item), class: 'btn btn-success' %></th>
          <!--あとで削除-->
          <th><%= link_to "削除する", admin_item_path(@item), method: :delete, data: {confirm:  "本当に削除しますか？"}, class: "btn btn-danger" %></th>
        </table>
      </div>
    </div>
  </div>
</div>