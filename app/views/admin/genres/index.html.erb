<div class="container">
  <div class="row">
    <div class="col-md-8 offset-2">
      <h3 class="my-4 mt-5">ジャンル一覧・追加</h3>

      <%=form_with model: @genre,url: admin_genres_path, method: :post do |f| %>

      <div class="text-center my-4 mt-5">
        <td><%= f.label :"ジャンル名", class: "mr-3" %></td>
        <td><%= f.text_field :name, class: "mr-5" %></td>
        <td><%= f.submit'新規登録',class: "btn btn-primary" %></td>
      </div>

      <% end %>

      <div class="text-center my-4 mt-5">
        <table class="table table-hover">
          <thead>
            <th>ジャンル</th>
          </thead>
        <% @genres.each do |genre| %>
          <td><%= genre.name %></td>
          <td><%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-success" %></td>
         </tbody>
        <%end%>
      </div>
    </div>
  </div>
</dvi>