 <div class='row'>
    <div class='col-md-8 offset-2'>
      <h3 class="my-4 mt-5"><%= customer.last_name %><%= customer.first_name %>さんの会員詳細</h3>
      <table class="table">
        <thead>
          <tr>
            <th>会員ID</th>
            <td><%= customer.id %></td>
          </tr>
          <tr>
            <th>氏名</th>
            <td><%= customer.last_name %><%= customer.first_name %></td>
            </tr>
          <tr>
            <th>フリガナ</th>
            <td><%= customer.last_name_kana %><%= customer.first_name_kana %></td>
            </tr>
          <tr>
          <th>郵便番号</th>
            <td><%= customer.post_number %></td>
          </tr>
          <tr>
            <th>住所</th>
            <td><%= customer.address %></td>
          </tr>
          <tr>
            <th>電話番号</th>
            <td><%= customer.phone_number %></td>
         </tr>
         <tr>
            <th>メールアドレス</th>
            <td><%= customer.email %></td>
         </tr>
         <tr>
          <th>会員ステータス</th>
        <% if customer.is_valid == '有効'  %>
          <th class = "text-success">
          <%= customer.is_valid %>
          </th>
        <%else%>
          <th class = "text-danger">
          <%= customer.is_valid %>
          </th>
        <% end %>
        </tr>
      </thead>
      </table>
    </div>
 </div>