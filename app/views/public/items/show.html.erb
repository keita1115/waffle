<div class="container mt-5">
  <div class="row">
    <div class="col-md-3">
      <%= render 'public/items/genre_search', genres: @genres %>
    </div>


    <div class="col-2 ml-3">
      <%= image_tag @item.get_item_image, size: "225x175" %>
    </div>
    
    <div class=" col-5 ml-5">
      <h4 class="text-center"><strong><%= @item.name %></strong></h4>
      <br>
      <p class="text-center"><strong><%= @item.introduction %></strong></p>
      <br>
      <h4 class="text-center"><strong>¥<%= @item.with_tax_price.to_s(:delimited) %>(税込)</strong></h4>
        <%= form_with model: @cart_item, url: cart_items_path, method: :post, local: true do |f| %>
      <br>

      <p class="text-center">
        <strong>
          <i class="fas fa-shopping-cart"></i>
          <%= f.label :"個数選択",class: "ml-3" %>
          <%= f.hidden_field :item_id, :value => @item.id %>
          <%= f.select :quantity, *[1..10] %>
          <%= f.submit "カートに入れる",class: "btn btn-primary ml-3" %>
         <% end %>
        </strong>
      </p>
    </div>
  </div>
</div>