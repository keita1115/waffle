<div class="container">
  <div class="row">
    <h5 class="p-4"><span class="col-md-3 bg-light text-center m-4">配送先編集</span></h5>
  </div>

 <%=form_with model: @address,url: address_path,method: :patch do |f| %>

  <form>
    <div class="form-group row">
      <%= f.label :郵便番号, class:"col-sm-3 col-form-label" %>
      <div class="col-md-3">
       <%= f.text_field :post_number, autofocus: true, autocomplete: "post_code", class:"form-control" %>
      </div>
    </div>
  
    <div class="form-group row">
      <%= f.label :住所, class:"col-sm-3 col-form-label" %>
      <div class="col-md-6">
       <%= f.text_field :address, autocomplete: "address", class:"form-control" %>
      </div>
    </div>
  
    <div class="form-group row">
      <%= f.label :宛名, class:"col-sm-3 col-form-label" %>
      <div class="col-md-6">
        <%= f.text_field :name, autocomplete: "name", class:"form-control" %>
      </div>
      <span>
      <div class="col">
        <%= f.submit "変更内容を保存", class:"btn btn-success btn-block btn-sm" %>
      </div>
      </span>
    </div>
  </form>
 <% end %>
</div>