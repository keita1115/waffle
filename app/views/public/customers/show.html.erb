<div class="container">
  <div class="row">
    <div class="col-md-8 offset-2">
      <h3 class="my-4 mt-5">マイページ</h3>

      <table class="table table-hover">
        <thead>
          <th>登録情報</th>
          <th><%= link_to '編集する', customers_mypage_edit_path, class: "btn btn-sm btn-success" %></th>
        </thead>
      </table>
      
      <table class='table table-hover'>
        <tr>
      	  <th>会員ID</th>
      	  <th><%= @customer.id %></th>
        </tr>
        <tr>
      	  <th>氏名</th>
      	  <th><%= @customer.last_name %><%= @customer.first_name %></th>
        </tr>
        <tr>
      	  <th>フリガナ</th>
      	  <th><%= @customer.last_name_kana %><%= @customer.first_name_kana %></th>
        </tr>
        <tr>
      	  <th>郵便番号</th>
      	  <th><%= @customer.post_number %></th>
        </tr>
        <tr>
      	  <th>住所</th>
      	  <th><%= @customer.address %></th>
        </tr>
        <tr>
      	  <th>電話番号</th>
      	  <th><%= @customer.phone_number %></th>
        </tr>
        <tr>
      	  <th>メールアドレス</th>
      	  <th><%= @customer.email %></th>
        </tr>
      </table>
      <table class="table table-hover">
        <thead>
          <th>配送先</th>
          <th><%= link_to '一覧を見る', addresses_path, class: "btn btn-sm btn-primary" %></th>
          <th>注文履歴</th>
          <th><%= link_to '一覧を見る', orders_path, class: "btn btn-sm btn-primary" %></th>
        </thead>
      </table>
    </div>
  </div>
</div>